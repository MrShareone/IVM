<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:padding="20dp"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/yanzheng_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="手机验证"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/we"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/yanzheng_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/yanzheng_code_input"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:digits="1234567890"
                android:maxLength="6"
                android:hint="输入验证码"/>
            <Button
                android:id="@+id/yanzheng_code_send"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="获取验证码"/>
        </LinearLayout>
        <Button
            android:id="@+id/yanzheng_submit"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/we"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提交"/>
        <Button
            android:id="@+id/yanzheng_ignore"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/yanzheng_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="跳过"/>

    </RelativeLayout>



</LinearLayout>