<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_contactus"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contactus_tel_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_weight="0"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/groptel" />

    <TextView
        android:id="@+id/contactus_wechat_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_weight="0"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/gropwechat" />

    <TextView
        android:id="@+id/contactus_email_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_weight="0"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/gropemail" />

</LinearLayout>
